{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "A status updated message for a container site",
  "additionalProperties": {
    "anyOf": [
      {
        "type": "string"
      },
      {
        "type": "number"
      }
    ],
    "description": "Additional client defined properties"
  },
  "properties": {
    "d": {
      "type": "object",
      "description": "The data of the update",
      "properties": {
        "s": {
          "enum": ["ONLINE", "OFFLINE", "DAMAGED"],
          "description": "The status of the container site"
        },
        "sc": {
          "type": "number",
          "description": "The status code of the container site - ONLINE=1, OFFLINE=2, DAMAGED=3"
        }
      },
      "required": ["s", "sc"]
    },
    "m": {
      "type": "object",
      "description": "Metadata about the update",
      "properties": {
        "pts": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp the message was published in ISO 8601 format"
        },
        "ptse": {
          "type": "number",
          "description": "The milliseconds since the epoch of when the message was published"
        }
      },
      "required": ["pts", "ptse"]
    }
  },
  "required": ["d", "m"]
}
