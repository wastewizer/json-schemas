{
  "name": "@wastewizer/json-schemas",
  "type": "module",
  "version": "0.0.0-development",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wastewizer/json-schemas.git"
  },
  "author": "WasteWizer",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/wastewizer/json-schemas/issues"
  },
  "homepage": "https://github.com/wastewizer/json-schemas#readme",
  "engines": {
    "node": "24.13.1",
    "yarn": "4.12.0"
  },
  "scripts": {
    "postinstall": "husky",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "node --test",
    "build": "node ./scripts/build.js && yarn format"
  },
  "dependencies": {
    "fluent-json-schema": "6.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "20.4.2",
    "@commitlint/config-conventional": "20.4.2",
    "@wastewizer/lint-staged-config": "1.3.1",
    "@wastewizer/prettier-config": "1.3.1",
    "ajv": "8.18.0",
    "ajv-formats": "3.0.1",
    "eslint": "10.0.1",
    "glob": "13.0.6",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "prettier": "3.8.1"
  },
  "packageManager": "yarn@4.12.0",
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/github",
        {
          "successComment": false,
          "failComment": false,
          "releasedLabels": false
        }
      ]
    ],
    "tagFormat": "@wastewizer/json-schemas@${version}"
  }
}
